<tr class="item-row">
  <td>
    <%= f.text_field :product_name, class: 'form-control', required: true,
        placeholder: 'Enter product name' %>
  </td>
  <td>
    <%= f.text_field :description, class: 'form-control',
        placeholder: 'Enter description (optional)' %>
  </td>
  <td>
    <%= f.number_field :quantity, class: 'form-control quantity-field', 
        min: 1, step: 1, required: true,
        placeholder: 'Quantity',
        data: { 
          action: 'change->purchase-order#updateItemTotal input->purchase-order#updateItemTotal'
        } %>
  </td>
  <td>
    <%= f.number_field :unit_price, class: 'form-control price-field',
        min: 0.01, step: 0.01, required: true,
        placeholder: 'Unit price',
        data: { 
          action: 'change->purchase-order#updateItemTotal input->purchase-order#updateItemTotal'
        } %>
  </td>
  <td>
    <span class="item-total" data-purchase-order-target="itemTotal">
      <%= number_to_currency(f.object.total_price) %>
    </span>
  </td>
  <td>
    <%= link_to_remove_association f, class: 'btn btn-sm btn-danger', 
        data: { confirm: 'Are you sure you want to remove this item?' } do %>
      <i class="bi bi-trash"></i>
    <% end %>
  </td>
</tr> 