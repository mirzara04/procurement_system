<tr class="item-row">
  <td>
    <%%= f.text_field :product_name, class: 'form-control', required: true %>
  </td>
  <td>
    <%%= f.text_field :description, class: 'form-control' %>
  </td>
  <td>
    <%%= f.number_field :quantity, class: 'form-control quantity-field', 
        min: 1, step: 1, required: true %>
  </td>
  <td>
    <%%= f.number_field :unit_price, class: 'form-control price-field',
        min: 0.01, step: 0.01, required: true %>
  </td>
  <td>
    <span class="item-total">
      <%%= number_to_currency(f.object.quantity.to_i * f.object.unit_price.to_f) %>
    </span>
  </td>
  <td>
    <%%= link_to_remove_association 'Remove', f, class: 'btn btn-sm btn-danger' %>
  </td>
</tr> 